generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  CodCliente Int        @id @default(autoincrement())
  email      String
  password   String
  Holdings   Holdings[]
  Wallet     Wallet[]
}

model Stocks {

  CodAtivo  Int        @id @default(autoincrement())
  NomeAtivo String
  Valor     Float
  Holdings  Holdings[]
}

model Wallet {
  id         Int   @id @default(autoincrement())
  Cliente    User  @relation(fields: [CodCliente], references: [CodCliente])
  CodCliente Int
  Saldo      Float @default(999.99)
}

model Holdings {
  id         String @id @default(cuid())
  Cliente    User   @relation(fields: [CodCliente], references: [CodCliente])
  Ativo      Stocks @relation(fields: [CodAtivo], references: [CodAtivo])
  Quantidade Float
  CodCliente Int
  CodAtivo   Int
}
